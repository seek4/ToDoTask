<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    

    <style name="TaskItemTextTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/task_item_text_title</item>
    </style>
    
    <style name="TaskItemTextDeadline">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/task_item_text_deadline</item>
    </style>
    
    <style name="PopupText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/popup_text</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    
    <style name="AnimationPreview">  
       <item name="android:windowEnterAnimation">@anim/fade_in</item>  
       <item name="android:windowExitAnimation">@anim/fade_out</item>  
   </style>  
   
    <style name="RecentShowButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/recent_show_button</item>
    </style>
    
</resources>
