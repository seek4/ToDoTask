<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/view_text_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <TextView 
        android:id="@+id/view_text_content"
        android:layout_below="@id/view_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <me.yangtong.view.LineProgressView 
        android:id="@+id/view_progress"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        />
    
    <TextView 
        android:id="@+id/text_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_progress"
        android:layout_alignParentLeft="true"
        />
    
    <TextView 
        android:id="@+id/text_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_progress"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
